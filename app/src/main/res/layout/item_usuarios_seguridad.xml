<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:paddingHorizontal="2dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Columna 1 -->
    <TextView
        android:id="@+id/tvNombreSeguridad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- Columna 2 -->
    <TextView
        android:id="@+id/tvNoControlSeguridad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- Columna 3 -->
    <TextView
        android:id="@+id/tvCorreoElectronicoSeguridad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- Columna 4 -->
    <TextView
        android:id="@+id/tvTelefonoSeguridad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="14sp"/>

    <!-- Botón Acción -->
    <Button
        android:id="@+id/btnAccionSeguridad"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="0.8"
        android:text="EDIT"
        android:textAllCaps="false"
        android:backgroundTint="#0e8bff"
        android:textColor="@android:color/white"/>

    <!--Botoín Editar -->
    <Button
        android:id="@+id/btnEliminarSeguridad"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="0.8"
        android:text="D"
        android:textAllCaps="false"
        android:backgroundTint="#0e8bff"
        android:textColor="@android:color/white"/>

</LinearLayout>
