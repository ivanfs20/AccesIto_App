<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USUARIOS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Encabezados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#0e8bff"
        android:paddingHorizontal="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="NOMBRE"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NRO.CONT"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CORREO"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TELEFONO"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="EDIT"
            android:textColor="@android:color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="D"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Lista de elementos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDatosAdministrador"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"/>

    <!-- Botones inferiores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/btnHomeAdministrador"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="HOME"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnDarAltaAdministrador"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="DAR ALTA"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnSalirAdministrador"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SALIR"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/material_dynamic_neutral70"
            android:textColor="@color/black"/>
    </LinearLayout>
    
</LinearLayout>
